/*	
The program creates the pattern below using conditional 
if statements.
	
	1******
    12*****
    123****
    1234***
    12345**
    123456*
    1234567 
	   */

//Verified in Unix

#include<cstdlib>
#include<iostream> 
#include<iomanip>
#include<cmath>

using namespace std;

int main(int argc, char *argv[]){

  int i,j,k;
  
  for(i=1;i<=7;i++){
  for(j=1;j<=i;++j) 
  cout<<j;
  for(k=7-i;k>=1;k--)cout<<"*";
  cout<<"\n";
}
  cout<<"\n";
  //system("PAUSE");
  return EXIT_SUCCESS;

}

